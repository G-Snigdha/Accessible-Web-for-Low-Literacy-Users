{
  "name": "accessible-web-backend",
  "version": "1.0.0",
  "description": "Backend API for Accessible Web Low-Literacy application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && node build/copyAssets.js",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "tsx src/database/reset.ts"
  },
  "keywords": [
    "accessibility",
    "low-literacy",
    "ai",
    "text-processing",
    "express",
    "typescript",
    "api"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "flesch": "^2.0.1",
    "flesch-kincaid": "^2.0.1",
    "flesh": "^0.0.1",
    "franc": "^6.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.12.0",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "reading-time": "^1.5.0",
    "sharp": "^0.33.2",
    "sqlite3": "^5.1.6",
    "syllable": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/natural": "^5.1.5",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/accessible-web-low-literacy.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/accessible-web-low-literacy/issues"
  },
  "homepage": "https://github.com/yourusername/accessible-web-low-literacy#readme"
}
